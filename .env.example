# Application
APP_ENV=development
APP_DEBUG=true
APP_SECRET_KEY=your-super-secret-key-min-32-chars-long

# Port Configuration (auto-set by start.sh via scripts/project-env.sh)
# Override these to pin specific ports; leave blank for auto-computed values.
KOULU_PG_PORT=5432
KOULU_REDIS_PORT=6379
KOULU_MAIL_SMTP_PORT=1025
KOULU_MAIL_WEB_PORT=8025

# Database
DATABASE_URL=postgresql+asyncpg://koulu:koulu_dev_password@localhost:5432/koulu

# Redis
REDIS_URL=redis://localhost:6379/0

# JWT
JWT_SECRET_KEY=your-jwt-secret-key-min-32-chars-long
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7
JWT_REFRESH_TOKEN_REMEMBER_ME_DAYS=30

# Email (Resend HTTP API)
RESEND_API_KEY=
MAIL_FROM=noreply@koulu.dev
MAIL_FROM_NAME=Koulu

# Frontend URL (for email links)
FRONTEND_URL=http://localhost:5173

# Rate Limiting
RATE_LIMIT_ENABLED=true
