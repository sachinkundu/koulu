{
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Bash",
        "pattern": "git commit",
        "hooks": [
          {
            "type": "command",
            "command": "echo 'âš ï¸  Remember: verify.sh must pass before committing'"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Edit",
        "pattern": "*.py",
        "hooks": [
          {
            "type": "command",
            "command": "cd $(git rev-parse --show-toplevel) && python -m mypy --no-error-summary $CLAUDE_FILE 2>&1 | tail -5"
          }
        ]
      }
    ]
  }
}
